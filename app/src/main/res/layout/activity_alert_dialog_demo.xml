<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AlertDialogDemoActivity">

    <Button
        android:text="Alert Dialog Simple Demo"
        android:layout_margin="10dp"
        android:textColor="#fff"
        android:id="@+id/alert_simple"
        android:background="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:text="Alert Dialog Custom View Demo"
        android:layout_margin="10dp"
        android:textColor="#fff"
        android:id="@+id/alert_custom_view"
        android:background="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:text="Bottomsheet Dialog Demo"
        android:layout_margin="10dp"
        android:textColor="#fff"
        android:id="@+id/bottom_sheet"
        android:background="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:text="Alert With Custom Button"
        android:layout_margin="10dp"
        android:textColor="#fff"
        android:id="@+id/alert_with_custom_button"
        android:background="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>